<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.RecordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <com.github.anastr.speedviewlib.SpeedView
            android:id="@+id/speedView"
            android:layout_width="match_parent"
            app:sv_minSpeed="0"
            app:sv_maxSpeed="180"
            app:sv_withIndicatorLight="true"
            app:sv_unitUnderSpeedText="true"
            app:sv_speedTextColor="@color/textColorPrimary"
            app:sv_unitTextColor="@color/textColorPrimary"
            app:sv_textColor="@color/textColorPrimary"
            app:sv_markColor="#00000000"
            android:layout_margin="30dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startBtn"
            android:text="@string/start"
            android:layout_gravity="center"/>
    </LinearLayout>

</FrameLayout>